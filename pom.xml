<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>eu.ralph-schuster</groupId>
		<artifactId>pom-oss</artifactId>
		<version>2.0.0</version>
	</parent>

	<properties>
		<rsbaselib.version>1.4.0</rsbaselib.version>
	</properties>

	<artifactId>b4j</artifactId>
	<version>3.0.1-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<url>https://techblog.ralph-schuster.eu/b4j-bugzilla-for-java/</url>
	<name>Bugzilla for Java</name>
	<description>A Java library for accessing Bugzilla instances</description>

	<scm>
		<connection>scm:git:https://github.com/technicalguru/b4j.git</connection>
		<developerConnection>scm:git:https://github.com/technicalguru/b4j.git</developerConnection>
		<url>https://github.com/technicalguru/b4j</url>
	  <tag>HEAD</tag>
  </scm>

	<distributionManagement>
		<site>
			<id>strato-server</id>
			<url>scp://download.ralph-schuster.eu/var/www/ralph-schuster.eu/download/${project.groupId}.${project.artifactId}/${project.version}</url>
		</site>
	</distributionManagement>

	<issueManagement>
		<system>Jira</system>
		<url>https://jira.ralph-schuster.eu/browse/BFJ</url>
	</issueManagement>

	<ciManagement>
		<system>bamboo</system>
		<url>https://bamboo.ralph-schuster.eu/browse/B4J</url>
	</ciManagement>

	<developers>
		<developer>
			<id>ralph</id>
			<name>Ralph Schuster</name>
		</developer>
	</developers>

	<dependencyManagement>
		<dependencies>
			<!-- Required since Java 9 -->
			<dependency>
				<groupId>javax.activation</groupId>
				<artifactId>javax.activation-api</artifactId>
				<version>1.2.0</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>javax.mail-api</artifactId>
			<version>1.5.2</version>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>8.0.16</version>
		</dependency>
		<dependency>
			<groupId>org.apache.xmlrpc</groupId>
			<artifactId>xmlrpc-client</artifactId>
			<version>3.1.3</version>
      		<exclusions>
        		<exclusion>  <!-- Java 9 exclusion -->
   					<groupId>xml-apis</groupId>
  					<artifactId>xml-apis</artifactId>
        		</exclusion>
      		</exclusions> 
		</dependency>
		<dependency>
			<groupId>eu.ralph-schuster</groupId>
			<artifactId>baselib</artifactId>
			<version>${rsbaselib.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.ralph-schuster</groupId>
			<artifactId>templating</artifactId>
			<version>${rsbaselib.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.ralph-schuster</groupId>
			<artifactId>csv</artifactId>
			<version>3.0.0</version>
		</dependency>
<!-- 
		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
			<version>2.3.0</version>
		</dependency>
		<dependency>
    		<groupId>javax.xml.parsers</groupId>
    		<artifactId>jaxp-api</artifactId>
    		<version>1.4.5</version>
		</dependency>
-->
		<dependency>
			<!-- see https://ecosystem.atlassian.net/wiki/display/JRJC/Download -->
			<!-- Repository at: https://m2proxy.atlassian.com/repository/public -->
			<groupId>com.atlassian.jira</groupId>
			<artifactId>jira-rest-java-client</artifactId>
			<version>2.0.0-m2</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>3.5.1</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<header><![CDATA[<a href="${project.url}" target="_new">Visit the ${project.name} Homepage</a>]]></header>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>atlassian</id>
			<url>https://m2proxy.atlassian.com/repository/public</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>
</project>