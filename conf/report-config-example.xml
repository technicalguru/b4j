<?xml version="1.0" encoding="ISO-8859-1"?>
<bugzilla-report>
	<bugzilla-session class="b4j.core.session.HttpBugzillaSession">
		<bugzilla-home>http://your-bugzilla.your-domain.com/</bugzilla-home>
		<proxy-host>10.10.10.250:8080</proxy-host>
		<ProxyAuthorizationCallback>
			<login>your-proxy-name</login>
			<password>your-proxy-password</password>
		</ProxyAuthorizationCallback>
		<AuthorizationCallback class="null">
			<login>your-name</login>
			<password>your-password</password>
		</AuthorizationCallback>
		
		<BugzillaBug class="b4j.core.DefaultBugzillaBug"/>
		
		<!-- 
			Some examples. Please have a look at the API documentation 
			for configuration description of these callbacks.
			
		<AuthorizationCallback class="b4j.core.session.CommandLineAuthorizationCallback"/>

		<AuthorizationCallback class="b4j.core.session.GuiAuthorizationCallback"/>
		
		<AuthorizationCallback class="b4j.core.session.PropertiesFileAuthorizationCallback">
			<File>your-properties-file.properties</File>
		</Authorization>
		
		<AuthorizationCallback class="b4j.core.session.TextFileAuthorizationCallback">
			<File>your-text-file.txt</File>
		</Authorization>
		
		<AuthorizationCallback class="b4j.core.session.XmlFileAuthorizationCallback">
			<File>your-xml-file.xml</File>
		</Authorization>
		
		-->
	</bugzilla-session>
	
